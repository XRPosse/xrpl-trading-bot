# XRPL Configuration
XRPL_NETWORK=testnet  # testnet, mainnet, or custom
XRPL_WSS_URL=wss://s.altnet.rippletest.net:51233
XRPL_JSON_RPC_URL=https://s.altnet.rippletest.net:51234

# Wallet Configuration (NEVER commit real keys!)
WALLET_SEED=
WALLET_ADDRESS=

# Trading Configuration
TRADING_PAIR=XRP/USDT
MIN_TRADE_AMOUNT=10
MAX_TRADE_AMOUNT=1000
STOP_LOSS_PERCENTAGE=5
TAKE_PROFIT_PERCENTAGE=10

# Exchange Configuration (if using CEX integration)
EXCHANGE_NAME=
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=

# Bot Configuration
BOT_MODE=paper_trading  # paper_trading or live
STRATEGY=simple_momentum  # simple_momentum, grid, arbitrage
UPDATE_INTERVAL=60  # seconds

# Risk Management
MAX_OPEN_POSITIONS=3
MAX_POSITION_SIZE_PCT=20  # percentage of total balance
DAILY_LOSS_LIMIT=100  # in base currency

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# Database (PostgreSQL)
DATABASE_URL=postgresql://xrpl_bot:password@localhost:5432/xrpl_trading_bot

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8000